{
  "name": "schematransfer",
  "version": "0.0.1",
  "description": "Utility for tranfer document schema between prodoctivity's system",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:deps": "bun install",
    "test": "bun test",
    "build": "bun build",
    "run_server": "bun run packages/server/index.ts",
    "build:exec": "bun build packages/server/index.ts --compile --outfile SchemaTransfer.exe --target bun-windows-x64",
    "format": "prettier --write **/*.ts",
    "lint": "eslint packages/**/*.ts",
    "lint:fix": "eslint packages/**/*.ts --fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "bun-types": "^1.2.19",
    "eslint": "^9.35.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.42.0"
  }
}
